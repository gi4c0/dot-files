# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
  status_command i3blocks -c ~/.dot-files/config/i3blocks/i3blocks.conf

  colors {
      background $bg-color
          separator #757575
      #                  border             background         text
      focused_workspace  $bg-color          $bg-color          $text-color
      inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
      urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }

  # font pango:monospace 12
  font pango:CaskaydiaCove Nerd Font Mono 11

  # Disable mouse wheel switching workspaces
  # wheel_up_cmd nop
  # wheel_down_cmd nop
}

# Keyboard settings
input "type:keyboard" {
  xkb_layout us,ru
  xkb_options caps:escape,ctrl:swap_lalt_lctl,grp:toggle
}

input "type:touchpad" {
  click_method clickfinger
  middle_emulation disabled
  tap_button_map lrm
  natural_scroll enabled
  dwt enabled
  scroll_factor 0.4
  pointer_accel -0.15
}

