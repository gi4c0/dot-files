set $mod Mod4

# as Ctrl on my layout
set $ctrl Mod1

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:SFNS Display 12
# font pango:monospace 12

# set default desktop layout (default is tiling)
workspace_layout tabbed

# Disable ugly borders
hide_edge_borders both

# Jump back and forth by pressing $mod+<n>
workspace_auto_back_and_forth yes

for_window [class=".*"] border pixel 0
# smart_gaps on
smart_borders on
gaps inner 7

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Might cuases lags in terminal
exec --no-startup-id picom --config ~/.dot-files/config/picom.conf

# Special keys adjust volume (in PulseAudio) and brightness
set $refresh_i3blocks pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+1 i3blocks
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight + 5"
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight - 5" 

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec xkb-switch -s us & i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher) $mod+d
bindcode $mod+40 exec --no-startup-id xkb-switch -s us & dmenu_run -i -l 20 -z 800 -x 560

# Choose display $mod+Shift+d
bindsym $mod+Shift+d exec --no-startup-id xkb-switch -s us & ~/.bin/switch_display.sh

## Navigate // Relative Window // <Super> k j h l ##
bindcode $mod+43 focus left
bindcode $mod+44 focus down
bindcode $mod+45 focus up
bindcode $mod+46 focus right

## Modify // Window Position // <Super><Shift> ↑ ↓ ← → ##
bindcode $mod+Shift+43 move left
bindcode $mod+Shift+44 move down
bindcode $mod+Shift+45 move up
bindcode $mod+Shift+46 move right

## Modify // Window Position
bindcode $ctrl+Shift+43 move to output left; focus left
bindcode $ctrl+Shift+44 move to output down; focus down
bindcode $ctrl+Shift+45 move to output up; focus up
bindcode $ctrl+Shift+46 move to output right; focus right

## Modify // Workspace Position // <Super><Ctrl><Shift> ↑ ↓ ← → ##
bindcode $mod+$ctrl+Shift+43 move workspace to output left
bindcode $mod+$ctrl+Shift+44 move workspace to output down
bindcode $mod+$ctrl+Shift+45 move workspace to output up
bindcode $mod+$ctrl+Shift+46 move workspace to output right

# navigate to upscreen (k, j)
bindcode $mod+Shift+Ctrl+45 move workspace to output up
bindcode $mod+Shift+Ctrl+44 move workspace to output down
bindcode $mod+Shift+Ctrl+46 move workspace to output right
bindcode $mod+Shift+Ctrl+43 move workspace to output left

# Disable mouse wheel affecting i3
bindsym button1 nop
bindsym button4 nop
bindsym button5 nop
bindsym button6 nop
bindsym button7 nop

# split orientation $mod+v
bindcode $mod+55 split h;exec notify-send 'tile horizontally'

# $mod+s
bindcode $mod+39 split v;exec notify-send 'tile vertically'

# $mod+Shift+s Settings
bindcode $mod+Shift+39 exec gnome-control-center bluetooth

# enter fullscreen mode for the focused container $mod+f
bindcode $mod+41 fullscreen toggle

# Make the currently focused window a scratchpad
bindsym $mod+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+plus scratchpad show

# change container layout (tabbed 'w', toggle split 'e')
bindcode $mod+25 layout tabbed
bindcode $mod+26 layout toggle split

# toggle tiling / floating
bindcode $mod+Shift+41 floating toggle

# change focus between tiling / floating windows $mod+t
bindcode $mod+28 focus mode_toggle

# focus the parent container ($mod+o (out))
bindcode $mod+32 focus parent

bindcode $mod+54 exec clipman pick -t dmenu --tool-args="-i -l 20 -z 800 -x 560"

# Switch to next workspace $mod+tab
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

