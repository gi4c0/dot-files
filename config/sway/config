#================ Modes ============================== #
bindcode $mod+38 mode "$mode_apps"
set $mode_apps Apps: (e) emacs, (m) mysql-workbench, (p) postman, (b) browser, (f) filemanager, (i) image editor

mode "$mode_apps" {
     # launch postman (p)
     bindcode 33 exec postman, mode "default"

     # launch browser (b)
     bindcode 56 exec google-chrome-stable, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"

    # Open pcmanfm (another file manager) (f)
     bindcode 41 exec nautilus, mode "default"

    # Open image editor (another file manager) (f)
     bindcode 31 exec krita, mode "default"
}

# =============== Jumps =============== #
# jump to emacs ($super+e)
bindcode $ctrl+26 [class="Emacs"] focus

# jump to postman ($super+p)
bindcode $ctrl+33 [class="Postman"] focus

# jump to mysql-workbench ($super+m)
bindcode $ctrl+58 [class="Mysql-workbench-bin"] focus

# jump to chrome ($super+c)
bindcode $ctrl+54 [class="Google-chrome"] focus

# jump to telegram ($super+t)
bindcode $ctrl+28 [class="TelegramDesktop"] focus

bindcode $ctrl+39 [class="Slack"] focus

# Open ranger
bindcode $mod+27 exec alacritty -e ranger
