set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
  status_command i3blocks -c ~/.dot-files/config/i3blocks/i3blocks.conf

  colors {
      background $bg-color
          separator #757575
      #                  border             background         text
      focused_workspace  $bg-color          $bg-color          $text-color
      inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
      urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }

  font pango:monospace 11

  # Disable mouse wheel switching workspaces
  wheel_up_cmd nop
  wheel_down_cmd nop
}

# Resizing windows
bindcode $mod+$ctrl+43 resize shrink width 5 px or 5 ppt
bindcode $mod+$ctrl+44 resize grow height 5 px or 5 ppt
bindcode $mod+$ctrl+45 resize shrink height 5 px or 5 ppt
bindcode $mod+$ctrl+46 resize grow width 5 px or 5 ppt

# $mod+p take screenshot (install with sudo apt install flameshot)
bindcode $mod+33 exec flameshot gui

# $mod+Shift+p take screenshot (install with sudo apt install flameshot)
bindcode $mod+Shift+33 exec passmenu

# Lock screen with fancy effect
bindcode $mod+Shift+53 exec --no-startup-id ~/.bin/lock.sh ~/Pictures/Icons/icon-lock.png

# =============== Window configs =================== #
for_window [class="Gnome-calculator"] floating enable

# Torrent float window
for_window [class="deluge"] floating enable
for_window [class="Deluge-gtk"] floating enable

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Assignment applications to particular workspaces by 'xprop'
assign [class="TelegramDesktop"] → $ws1
assign [class="Slack"] → $ws1
assign [class="Rocket.Chat"] → $ws1
assign [class="discord"] → $ws1

assign [class="Google-chrome"] → $ws2
assign [class="Chromium"] → $ws2
assign [class="Firefox"] → $ws2

assign [class="Emacs"] → $ws3

assign [class="Postman"] → $ws4
assign [class="Mysql-workbench-bin"] → $ws4

# =============== Auto exec on startup =============== #
# Wallpaper restore
exec nitrogen --restore
exec --no-startup-id telegram-desktop
exec --no-startup-id chromium
exec --no-startup-id slack

#================ Modes ============================== #
bindcode $mod+38 mode "$mode_apps"
set $mode_apps Apps: (e) emacs, (m) mysql-workbench, (p) postman, (b) browser, (f) filemanager, (i) image editor

mode "$mode_apps" {
     # launch postman (p)
     bindcode 33 exec postman, mode "default"

     # launch browser (b)
     bindcode 56 exec google-chrome-stable, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"

    # Open pcmanfm (another file manager) (f)
     bindcode 41 exec nautilus, mode "default"

    # Open image editor (another file manager) (f)
     bindcode 31 exec krita, mode "default"
}

# =============== Jumps =============== #
# jump to emacs ($super+e)
bindcode $ctrl+26 [class="Emacs"] focus

# jump to postman ($super+p)
bindcode $ctrl+33 [class="Postman"] focus

# jump to mysql-workbench ($super+m)
bindcode $ctrl+58 [class="Mysql-workbench-bin"] focus

# jump to chrome ($super+c)
bindcode $ctrl+54 [class="Google-chrome"] focus

# jump to telegram ($super+t)
bindcode $ctrl+28 [class="TelegramDesktop"] focus

bindcode $ctrl+39 [class="Slack"] focus

# Open ranger
bindcode $mod+27 exec alacritty -e ranger

workspace "2" output HDMI-1
workspace "4" output HDMI-1
